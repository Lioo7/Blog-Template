<%- include('partials/header'); %>

<h1>Home</h1>
<p> <%= startingContnet %> </p>

<% posts.forEach((post) => { %>
    <h1><%= post.title %></h1>
    <% if (post.content.length > 100) { %>
        <% post.content = post.content.substring(0, 100) + '...'; %>
        <% } %>
    <p>
    <%= post.content %> 
    <a href="/posts/<%= post._id%>">Read More</a>
    </p>
    <% }) %>

